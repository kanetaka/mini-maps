{
  "name": "mini-tokyo-3d",
  "version": "2.5.0-SNAPSHOT",
  "description": "A real-time 3D digital map of Tokyo's public transport system",
  "main": "dist/mini-tokyo-3d.js",
  "style": "dist/mini-tokyo-3d.css",
  "dependencies": {
    "@deck.gl/core": "^8.2.8",
    "@deck.gl/layers": "^8.2.8",
    "@deck.gl/mapbox": "^8.2.8",
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@turf/along": "^5.1.5",
    "@turf/bearing": "^5.1.5",
    "@turf/buffer": "^5.1.5",
    "@turf/center-of-mass": "^5.1.5",
    "@turf/clean-coords": "^5.1.5",
    "@turf/distance": "^5.1.5",
    "@turf/helpers": "^5.1.5",
    "@turf/invariant": "^5.1.5",
    "@turf/length": "^5.1.5",
    "@turf/line-slice": "^5.1.5",
    "@turf/meta": "^5.1.5",
    "@turf/nearest-point-on-line": "^5.1.5",
    "@turf/polygon-to-line": "^5.1.5",
    "@turf/truncate": "^5.1.5",
    "@turf/union": "^5.1.5",
    "csscolorparser": "^1.0.3",
    "japanese-holidays": "^1.0.9",
    "loaders.css": "^0.1.2",
    "mapbox-gl": "^1.12.0",
    "pako": "^1.0.11",
    "suncalc": "^1.8.0",
    "three": "0.117.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-image": "^2.0.5",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-strip": "^2.0.0",
    "eslint": "^7.9.0",
    "eslint-config-mourner": "^3.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.5.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.1",
    "postcss-inline-svg": "^4.1.0",
    "rollup": "^2.26.11",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-terser": "^7.0.2"
  },
  "scripts": {
    "build": "rollup -c",
    "build-pages": "rm -rf build; cp -r public build; cp .npmignore secrets dist/mini-tokyo-3d.min.css dist/mini-tokyo-3d.min.js dist/mini-tokyo-3d.min.js.map build",
    "build-data": "rm -rf build/data; mkdir -p build/data; cp data/dictionary-*.json data/osm-liberty.json build/data; node dist/loader",
    "build-all": "run-s build build-pages build-data",
    "lint": "eslint --cache --ignore-path .gitignore src",
    "test-pages": "rm -rf build; cp -r public build; cp .npmignore secrets dist/mini-tokyo-3d.css dist/mini-tokyo-3d.js dist/mini-tokyo-3d.js.map build",
    "test": "run-s build test-pages"
  },
  "files": [
    "build/",
    "dist/mini-tokyo-3d.*",
    "src/",
    "USER_GUIDE-*",
    "DEVELOPER_GUIDE-*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nagix/mini-tokyo-3d.git"
  },
  "author": "Akihiko Kusanagi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nagix/mini-tokyo-3d/issues"
  },
  "homepage": "https://minitokyo3d.com",
  "jsdelivr": "dist/mini-tokyo-3d.min.js",
  "unpkg": "dist/mini-tokyo-3d.min.js"
}
